<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- JDBC Database connection settings -->
        <property name="connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="connection.url">jdbc:sqlserver://DE2236240W1\SQLEXPRESS2014;databaseName=MarketDB;integratedSecurity=true</property>
        <!--  <property name="connection.url">jdbc:sqlserver://10.101.152.189\SQLEXPRESS2014;databaseName=MarketDB;integratedSecurity=true</property>-->

        <!-- JDBC connection pool settings ... using built-in test pool -->
        <property name="connection.pool_size">100</property>

        <!-- Select our SQL dialect -->
        <property name="dialect">org.hibernate.dialect.SQLServerDialect</property>

        <!-- Echo the SQL to stdout -->
        <property name="show_sql">true</property>

		<!-- Set the current session context -->
		<property name="current_session_context_class">thread</property>
		
		<property name="hbm2ddl.auto">update</property>
		
		<mapping class="model.Upload"/>
 		<mapping class="model.BloombergUpload"/>
 		<mapping class="model.MarkitUpload"/>
 		<mapping class="model.ICEUpload"/>
 		<mapping class="model.Job"/>
 		<mapping class="model.User"/>
    </session-factory>

</hibernate-configuration>